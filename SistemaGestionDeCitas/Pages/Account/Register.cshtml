@page
@model RegisterModel
@{
    Layout = "_LoginLayout";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">

    <div class="col-3 login">
        <div class="d-flex justify-content-center">
            <p>
                <h1>
                    Register
                </h1>
            </p>
        </div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="mb-3">
                <div class="form-floating m-3">
                    <input type="email" class="form-control" asp-for="Register.Email" id="email" placeholder="name@example.com" required />
                    <label for="email">Email</label>
                </div>

                <div class="form-floating m-3">
                    <input type="password" class="form-control" asp-for="Register.Password" id="password" placeholder="Password" required />
                    <label for="password">Password</label>
                </div>
                <div class="form-floating m-3">
                    <input type="password" class="form-control" asp-for="Register.ValidatePassword" type="password" id="validatePassword" placeholder="Validate Password"/>
                    <label for="validatePassword">Validate Password</label>
                </div>
                <div class="mb-1" style="display:flex; justify-content:center;">
                    <button type="submit" class="btn btn-primary col-8 m-2 p-1"> Register</button>
                </div>
                <div class="mb-1">
                    <small class="d-flex justify-content-center">
                        <p>
                            Already have an Account?
                            <a href="/Account/Login" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Login</a>
                        </p>
                    </small>
                </div>

            </div>
        </form>
    </div>


</div>